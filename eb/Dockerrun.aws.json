{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "jhipsta-db-data",
      "host": {
        "sourcePath": "/var/jhipsta-db/data"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "jhipsta-db",
      "image": "postgres:9.5.4",
      "essential": true,
      "memoryReservation": 300,
      "portMappings": [
        {
          "hostPort": 5432,
          "containerPort": 5432
        }
      ],
      "environment": [
        {
          "name": "POSTGRES_DB",
          "value": "jhipsta"
        },
        {
          "name": "POSTGRES_USER",
          "value": "jhipsta"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "password"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "jhipsta-db-data",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    },
    {
      "name": "jhipsta-app",
      "image": "740192421584.dkr.ecr.eu-west-1.amazonaws.com/jhipsta-app:latest",
      "essential": true,
      "memoryReservation": 300,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8080
        }
      ],
      "links": [
        "jhipsta-db"
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        },
        {
          "name": "SPRING_DATASOURCE_URL",
          "value": "jdbc:postgresql://jhipsta-db/jhipsta"
        },
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "value": "jhipsta"
        },
        {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "value": "password"
        }
      ],
      "mountPoints": []
    }
  ]
}
